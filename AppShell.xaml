<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NbaStatsMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NbaStatsMaui.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Sched" Icon="sched.png">
            <ShellContent ContentTemplate="{DataTemplate local:SchedulePage}" Route="MainPage" />
        </Tab>
        <Tab Title="Teams" Icon="team.png">
            <ShellContent ContentTemplate="{DataTemplate local:TeamsPage}" Route="TeamsPage" />
        </Tab>
        <Tab Title="Players" Icon="player.png">
            <ShellContent ContentTemplate="{DataTemplate local:PlayersPage}" Route="PlayersPage" />
        </Tab>
    </TabBar>
</Shell>
